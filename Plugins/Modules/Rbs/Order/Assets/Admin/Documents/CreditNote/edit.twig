<div class="row" data-rbs-document-editor-base="" data-model="Rbs_Order_CreditNote">
	<div class="col-md-12">
		<rbs-page-header sub-title="{{ i18nAttr(modelKey('Rbs_Order_CreditNote'), ['ucf']) }}"></rbs-page-header>
	</div>

	<div data-rbs-aside-column="">
		{% include '@Rbs_Admin/view/asides.twig' %}
		{% include '@Rbs_Admin/view/links.twig' %}
	</div>

	<div class="document-form" data-rbs-main-column="">
		<form data-ng-submit="submit()" data-rbs-document-editor-edit=""
			data-rbs-document-editor-rbs-order-credit-note-edit="">
			<fieldset data-rbs-editor-section=""
				data-editor-section-label="{{ i18nAttr('m.rbs.admin.admin.general_properties', ['ucf']) }}">

				<rbs-field-picker property="ownerId" label="{{ i18nAttr(propertyKey('Rbs_Order_CreditNote', 'ownerId'), ['ucf']) }}"
						accepted-model="Rbs_User_User" value-ids="true">
				</rbs-field-picker>

				<rbs-field-text property="targetIdentifier" label="{{ i18nAttr(propertyKey('Rbs_Order_CreditNote', 'targetIdentifier'), ['ucf']) }}">
					<span class="help-block" data-ng-if="document.target">
						<a class="go-to-link" href="javascript:;" data-ng-href="(= document.target|rbsURL:'edit' =)" data-ng-bind="document.target.label"></a>
					</span>
				</rbs-field-text>

				<rbs-field-text property="code" label="{{ i18nAttr(propertyKey('Rbs_Order_CreditNote', 'code'), ['ucf']) }}">
				</rbs-field-text>

				<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Order_CreditNote', 'amount'), ['ucf']) }}">
					<rbs-price-input data-ng-model="document.amount" data-currency-code="(= document.currencyCode =)">
					</rbs-price-input>
				</rbs-field>

				<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Order_CreditNote', 'currencyCode'), ['ucf']) }}">
					<select data-ng-model="document.currencyCode" data-rbs-items-from-collection="Rbs_Price_Collection_Iso4217"
						class="form-control"></select>
				</rbs-field>

				<rbs-field label="{{ i18nAttr(propertyKey('Rbs_Order_CreditNote', 'amountNotApplied'), ['ucf']) }}">
					<rbs-price-input data-ng-model="document.amountNotApplied" data-currency-code="(= document.currencyCode =)">
					</rbs-price-input>
				</rbs-field>

				<h3>{{ i18nAttr('m.rbs.order.admin.credit_note_usage', ['ucf']) }}</h3>
				<table class="document-list table table-condensed table-bordered table-striped table-hover token">
					<thead>
						<tr>
							<th>{{ i18nAttr('m.rbs.order.documents.creditnote_targetidentifier', ['ucf']) }}</th>
							<th>{{ i18nAttr('m.rbs.order.admin.credit_note_amount', ['ucf']) }}</th>
						</tr>
					</thead>
					<tbody>
						<tr data-ng-repeat="usage in document.usedIn" class="normal-row">
							<td><a href="" data-ng-href="(= usage.target|rbsURL:'edit' =)">(= usage.label =)</a></td>
							<td>(= usage.formattedAmount =)</td>
						</tr>
					</tbody>
				</table>
			</fieldset>

			{% include '@Rbs_Admin/view/fieldsets.twig' %}

			<rbs-document-editor-button-bar></rbs-document-editor-button-bar>
		</form>
	</div>
</div>